---
import HeadBase from '@/components/headBase/HeadBase.astro';
const imgConect = "../../public/assest/imgs/logo_conectado.png";
const conectAuth = "../../public/assest/imgs/conectados_.png";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Login", description = "Login" } = Astro.props;
---

<html lang="en">
  <head>
    <HeadBase title={title} description={description} />
  </head>
  <body>
    <div class="min-h-screen sm:flex sm:flex-row mx-0 bg-blue-800">
      <img src={conectAuth} alt="" class="w-auto h-dvh" />
      <div
        class="flex-col flex self-center p-10 sm:max-w-5xl xl:max-w-2xl z-10"
      >
        <div class="items-center hidden lg:flex flex-col">
          <h1 class="mb-3 font-bold text-3xl text-white">Bienvenidos a</h1>
          <img src={imgConect} class="mb-3" width="250" height="350" />
        </div>
      </div>
      <slot />
    </div>
  </body>
</html>
